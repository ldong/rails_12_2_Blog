<%= form_for @post do |f| %>
<% if @post.errors.any? %>
  <h2><%= pluralize(@post.errors.count, "error") %>Prevent this post from saving</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg  %></li>
    <% end %>
  </ul>
<% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>